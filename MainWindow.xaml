<Window x:Class="AutoLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoLayout"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="144" Margin="10,85,0,0" VerticalAlignment="Top" Width="497">
            <Button Content="Select file" HorizontalAlignment="Left" Margin="80,102,0,0" VerticalAlignment="Top" Width="75" Click="FileSelectButton_Click"/>
            <TextBox Name="SelectedFileText" TextAlignment="Center" HorizontalAlignment="Left" Height="42" TextWrapping="Wrap" Text="No file selected..." VerticalAlignment="Top" Width="497" Margin="0,16,0,0"/>
            <Button Content="Make" HorizontalAlignment="Left" Margin="196,102,0,0" VerticalAlignment="Top" Width="75" Click="MakeButton_Click"/>
        </Grid>
    </Grid>
</Window>
